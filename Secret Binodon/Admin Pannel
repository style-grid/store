    <script>
        // --- BASE64 ENCODING/DECODING UTILS ---
        function encodeUrl(url) {
            // Base64 ‡¶è‡¶®‡¶ï‡ßã‡¶°‡¶ø‡¶Ç + URL-safe ‡¶´‡¶∞‡¶Æ‡ßç‡¶Ø‡¶æ‡¶ü
            return btoa(url).replace(/\+/g, '-').replace(/\//g, '_').replace(/=/g, ''); 
        }

        // --- MAIN LINK GENERATION LOGIC (‡¶ö‡ßá‡¶á‡¶® ‡¶è‡¶®‡¶ï‡ßã‡¶°‡¶ø‡¶Ç) ---
        document.getElementById('generate-btn').addEventListener('click', function() {
            const originalLink = document.getElementById('original-link').value.trim();
            
            if (!originalLink || !originalLink.startsWith('http')) {
                // ‡¶®‡ßã‡¶ü‡¶ø‡¶´‡¶ø‡¶ï‡ßá‡¶∂‡¶® ‡¶¨‡¶®‡ßç‡¶ß‡ßá‡¶∞ ‡¶®‡¶ø‡¶∞‡ßç‡¶¶‡ßá‡¶∂ ‡¶Ö‡¶®‡ßÅ‡¶Ø‡¶æ‡ßü‡ßÄ, ‡¶∂‡ßÅ‡¶ß‡ßÅ‡¶Æ‡¶æ‡¶§‡ßç‡¶∞ ‡¶¨‡ßà‡¶ß‡¶§‡¶æ ‡¶ö‡ßá‡¶ï ‡¶ï‡¶∞‡¶æ ‡¶π‡¶¨‡ßá
                // alert('‡¶Ö‡¶®‡ßÅ‡¶ó‡ßç‡¶∞‡¶π ‡¶ï‡¶∞‡ßá ‡¶è‡¶ï‡¶ü‡¶ø ‡¶¨‡ßà‡¶ß Original Video Link ‡¶™‡ßç‡¶∞‡¶¶‡¶æ‡¶® ‡¶ï‡¶∞‡ßÅ‡¶® (http ‡¶¨‡¶æ https ‡¶¶‡¶ø‡¶Ø‡¶º‡ßá ‡¶∂‡ßÅ‡¶∞‡ßÅ ‡¶ï‡¶∞‡ßÅ‡¶®)‡•§');
                return; // ‡¶≠‡ßÅ‡¶≤ ‡¶≤‡¶ø‡¶Ç‡¶ï ‡¶π‡¶≤‡ßá ‡¶∂‡ßÅ‡¶ß‡ßÅ ‡¶´‡¶æ‡¶Ç‡¶∂‡¶® ‡¶¨‡¶®‡ßç‡¶ß ‡¶π‡¶¨‡ßá
            }

            // 1. ‡¶°‡ßã‡¶Æ‡ßá‡¶®‡¶ó‡ßÅ‡¶≤‡¶ø ‡¶∏‡¶Ç‡¶ó‡ßç‡¶∞‡¶π ‡¶ï‡¶∞‡¶æ (‡¶è‡¶ó‡ßÅ‡¶≤‡¶ø hidden ‡¶π‡¶≤‡ßá‡¶ì ‡¶ï‡¶æ‡¶ú ‡¶ï‡¶∞‡¶¨‡ßá)
            const step1Domain = document.getElementById('step1-domain').value.trim().replace(/\/$/, ''); // ‡¶∏‡ßç‡¶≤‡¶æ‡¶∂ ‡¶Æ‡ßÅ‡¶õ‡ßá ‡¶´‡ßá‡¶≤‡¶æ
            const step2Domain = document.getElementById('step2-domain').value.trim().replace(/\/$/, '');
            const step3Domain = document.getElementById('step3-domain').value.trim().replace(/\/$/, '');
            
            // 2. ‡¶è‡¶®‡¶ï‡ßç‡¶∞‡¶ø‡¶™‡¶∂‡¶® (‡¶∏‡¶∞‡ßç‡¶¨‡¶∂‡ßá‡¶∑ ‡¶≤‡¶ø‡¶Ç‡¶ï ‡¶•‡ßá‡¶ï‡ßá ‡¶∂‡ßÅ‡¶∞‡ßÅ)
            
            // A. Final Link (Original Link) ‡¶ï‡ßá ‡¶è‡¶®‡¶ï‡ßã‡¶° ‡¶ï‡¶∞‡¶æ
            const encodedFinalLink = encodeUrl(originalLink);
            
            // B. Step 3 ‡¶≤‡¶ø‡¶Ç‡¶ï‡ßá‡¶∞ ‡¶ú‡¶®‡ßç‡¶Ø URL ‡¶§‡ßà‡¶∞‡¶ø ‡¶ï‡¶∞‡¶æ: Step3?s=3&target=[Encoded Original Link]
            const linkForStep3 = `${step3Domain}?s=3&target=${encodedFinalLink}`;
            const encodedLinkForStep3 = encodeUrl(linkForStep3);
            
            // C. Step 2 ‡¶≤‡¶ø‡¶Ç‡¶ï‡ßá‡¶∞ ‡¶ú‡¶®‡ßç‡¶Ø URL ‡¶§‡ßà‡¶∞‡¶ø ‡¶ï‡¶∞‡¶æ: Step2?s=2&target=[Encoded Link For Step 3]
            const linkForStep2 = `${step2Domain}?s=2&target=${encodedLinkForStep3}`;
            const encodedLinkForStep2 = encodeUrl(linkForStep2);
            
            // D. Step 1 (Final Shareable Link) ‡¶è‡¶∞ ‡¶ú‡¶®‡ßç‡¶Ø URL ‡¶§‡ßà‡¶∞‡¶ø ‡¶ï‡¶∞‡¶æ: Step1?s=1&target=[Encoded Link For Step 2]
            const finalShareableLink = `${step1Domain}?s=1&target=${encodedLinkForStep2}`;

            // 3. ‡¶Ü‡¶â‡¶ü‡¶™‡ßÅ‡¶ü ‡¶™‡ßç‡¶∞‡¶¶‡¶∞‡ßç‡¶∂‡¶® ‡¶ï‡¶∞‡¶æ
            document.getElementById('output-link').textContent = finalShareableLink;
            document.getElementById('output-section').style.display = 'block';
            
            // üî• ‡¶®‡ßã‡¶ü‡¶ø‡¶´‡¶ø‡¶ï‡ßá‡¶∂‡¶® ‡¶¨‡¶®‡ßç‡¶ß ‡¶ï‡¶∞‡¶æ ‡¶π‡ßü‡ßá‡¶õ‡ßá üî•
            // alert('‡¶∏‡¶´‡¶≤‡¶≠‡¶æ‡¶¨‡ßá ‡¶∂‡ßá‡¶Ø‡¶º‡¶æ‡¶∞‡¶Ø‡ßã‡¶ó‡ßç‡¶Ø ‡¶≤‡¶ø‡¶Ç‡¶ï ‡¶ú‡ßá‡¶®‡¶æ‡¶∞‡ßá‡¶ü ‡¶ï‡¶∞‡¶æ ‡¶π‡¶Ø‡¶º‡ßá‡¶õ‡ßá! ‡¶è‡¶ñ‡¶® ‡¶≤‡¶ø‡¶Ç‡¶ï‡¶ü‡¶ø ‡¶ï‡¶™‡¶ø ‡¶ï‡¶∞‡ßÅ‡¶®‡•§');
        });

        // --- COPY LOGIC ---
        function copyLink() {
            const linkElement = document.getElementById('output-link');
            const linkText = linkElement.textContent;
            
            const tempInput = document.createElement('textarea');
            tempInput.value = linkText;
            document.body.appendChild(tempInput);
            
            tempInput.select();
            document.execCommand('copy');
            
            document.body.removeChild(tempInput);
            
            // üî• ‡¶®‡ßã‡¶ü‡¶ø‡¶´‡¶ø‡¶ï‡ßá‡¶∂‡¶® ‡¶¨‡¶®‡ßç‡¶ß ‡¶ï‡¶∞‡¶æ ‡¶π‡ßü‡ßá‡¶õ‡ßá üî•
            // alert('‡¶ú‡ßá‡¶®‡¶æ‡¶∞‡ßá‡¶ü ‡¶ï‡¶∞‡¶æ ‡¶≤‡¶ø‡¶Ç‡¶ï ‡¶ï‡¶™‡¶ø ‡¶ï‡¶∞‡¶æ ‡¶π‡¶Ø‡¶º‡ßá‡¶õ‡ßá!');
        }
    </script>
